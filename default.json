{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "github>Turbo87/renovate-config//rust/updateToolchain",
    ":automergeDigest",
    ":semanticCommits"
  ],
  "automergeType": "pr",
  "platformAutomerge": true,
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "lint",
        "prettier",
        "typescript"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    }
  ]
}
