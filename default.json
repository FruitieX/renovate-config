{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "config:best-practices",
    "config:recommended",
    "group:allNonMajor",
    "github>Turbo87/renovate-config//rust/updateToolchain",
    ":automergeStableNonMajor",
    ":automergeDigest",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":semanticCommits"
  ],
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    }
  ]
}
